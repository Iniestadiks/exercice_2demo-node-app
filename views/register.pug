extends layout

block content
  h1 Inscription
  form(action='/register', method='post')
    .form-group
      label(for='name') Nom
      input.form-control(type='text', name='name', id='name')
    .form-group
      label(for='email') Email
      input.form-control(type='email', name='email', id='email')
    button.btn.btn-primary(type='submit') S'inscrire